@model List<PortfolioCore.Entities.Contact>
<section id="contact" class="contact section">
	@foreach (var item in Model)
	{
		<div class="container section-title" data-aos="fade-up">
			<h2>İletişim Bilgilerim</h2>
			<p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
		</div>
		<div class="container" data-aos="fade" data-aos-delay="100">

			<div class="row gy-4">

				<div class="col-lg-2">
					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
						<i class="bi bi-geo-alt flex-shrink-0"></i>
						<div>
							<h3>Adres</h3>
							<p>@item.Address</p>
						</div>
					</div><!-- End Info Item -->

					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
						<i class="bi bi-telephone flex-shrink-0"></i>
						<div>
							<h3>Telefon</h3>
							<p>@item.PhoneNumber</p>
						</div>
					</div><!-- End Info Item -->

					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
						<i class="bi bi-envelope flex-shrink-0"></i>
						<div>
							<h3>Email</h3>
							<p>@item.Email</p>
						</div>
					</div><!-- End Info Item -->
				</div>

				<div class="col-lg-8">
					<form action="forms/contact.php" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
						<div class="row gy-4">

							<div class="col-md-6">
								<input type="text" name="name" class="form-control" placeholder="Your Name" required="">
							</div>

							<div class="col-md-6 ">
								<input type="email" class="form-control" name="email" placeholder="Your Email" required="">
							</div>

							<div class="col-md-12">
								<input type="text" class="form-control" name="subject" placeholder="Subject" required="">
							</div>

							<div class="col-md-12">
								<textarea class="form-control" name="message" rows="6" placeholder="Message" required=""></textarea>
							</div>

							<div class="col-md-12 text-center">
								<div class="loading">Loading</div>
								<div class="error-message"></div>
								<div class="sent-message">Your message has been sent. Thank you!</div>

								<button type="submit">Mesaj Gönder</button>
							</div>
							<div class="col-lg-2">
								<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3062.8232007449733!2d33.480020075798194!3d39.85579497153521!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34c1d4392b069%3A0xa88a2373ac7755db!2sTeknosa!5e0!3m2!1str!2str!4v1710634491638!5m2!1str!2str" width="700" height="200" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
							</div>

						</div>
					</form>

				</div><!-- End Contact Form -->


			</div>

		</div>
	}
	<!-- Section Title -->
	<!-- End Section Title -->

	

</section>